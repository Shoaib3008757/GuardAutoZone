<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Enter Make i.e Suzuki Swift "
        android:id="@+id/et_car_make"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_years"
            android:maxLength="4"
            android:hint="Enter Start Year"
            android:layout_marginLeft="10dp"
            android:inputType="date"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/end_year"
            android:maxLength="4"
            android:hint="Enter End Year"
            android:layout_marginLeft="20dp"
            android:inputType="date"/>

    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_view_profile_dialog"
        android:layout_marginTop="50dp"
        android:text="View"/>

</LinearLayout>